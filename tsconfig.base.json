{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "strict": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rxap/schematics-ts-morph": [
        "dist/libs/ts-morph"
      ],
      "@rxap/schematics-html": [
        "dist/libs/html"
      ],
      "@rxap/schematics-xml-parser": [
        "dist/libs/xml-parser"
      ],
      "@rxap/schematics-open-api": [
        "dist/libs/open-api"
      ],
      "@rxap/schematics-form": [
        "dist/libs/form"
      ],
      "@rxap/schematics-shared": [
        "dist/libs/shared"
      ],
      "@rxap/schematics-router": [
        "dist/libs/router"
      ],
      "@rxap/schematics-table": [
        "dist/libs/table"
      ],
      "@rxap/schematics-utilities": [
        "dist/libs/utilities"
      ],
      "@rxap/schematics": [
        "libs/schematics/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
