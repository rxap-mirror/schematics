{
  "name": "schematics",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/schematics/src",
  "projectType": "library",
  "targets": {
    "version": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["echo ok"]
      },
      "configurations": {
        "production": {}
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/schematics",
        "tsConfig": "libs/schematics/tsconfig.lib.json",
        "main": "libs/schematics/src/index.ts",
        "assets": [
          "libs/schematics/*.md",
          "libs/schematics/LICENSE",
          {
            "input": "./libs/schematics/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./libs/schematics/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./libs/schematics",
            "glob": "collection.json",
            "output": "."
          },
          {
            "input": "./libs/schematics",
            "glob": "migration.json",
            "output": "."
          }
        ],
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/schematics/**/*.ts",
          "libs/my-plugin/package.json",
          "libs/my-plugin/collection.json",
          "libs/my-plugin/migration.json"
        ]
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/schematics"],
      "options": {
        "jestConfig": "libs/schematics/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "readme": {
      "executor": "@rxap/plugin-readme-generator:library"
    },
    "update-package-group": {
      "executor": "@rxap/plugin-library:update-package-group"
    },
    "update-peer-dependencies": {
      "executor": "@rxap/plugin-library:update-peer-dependencies",
      "options": {
        "ignore": ["resolve"]
      }
    }
  },
  "tags": []
}
