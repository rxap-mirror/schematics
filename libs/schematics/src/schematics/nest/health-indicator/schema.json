{
  "$schema": "http://json-schema.org/schema",
  "$id": "schematics-nest-health-indicator",
  "title": "HealthIndicator",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the health indicator class",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the health indicator?"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The absolute path to the destination folder",
      "visible": false
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    }
  },
  "required": [
    "name"
  ]
}
