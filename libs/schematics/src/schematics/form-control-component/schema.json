{
  "$schema": "http://json-schema.org/schema",
  "$id": "form-control-component",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Form control component name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path at which to create the form control component file, relative to the current workspace.",
      "visible": false
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "prefix": {
      "type": "string",
      "description": "Form control component name"
    }
  },
  "required": [
    "name"
  ]
}
